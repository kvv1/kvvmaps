                android:textColor="@color/greendark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cur"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Cur"
                android:textColor="@color/greendark"
                android:textSize="30sp"
                android:textStyle="bold" />
 -->
            <Button
                android:id="@+id/goto1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Play"
                android:textColor="@color/greendark"
                android:textSize="30sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>