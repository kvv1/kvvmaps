<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@color/white" android:orientation="vertical"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:minWidth="280dip">
	<TextView android:id="@+id/TextView01"
		android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Имя"></TextView>
	<EditText android:text="" android:id="@+id/Name"
		android:layout_width="fill_parent" android:layout_height="wrap_content"></EditText>
	<LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_marginTop="10dip">
		<Button android:id="@+id/Split" android:text="Разделить" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
		<Button android:id="@+id/Hide" android:text="Скрыть" android:layout_height="wrap_content" android:layout_width="wrap_content"></Button>
	</LinearLayout>

	<LinearLayout android:id="@+id/RelativeLayout01"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
		<Button android:text="OK" android:id="@+id/OK"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_weight="1"></Button>
		<Button android:id="@+id/Delete"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="Удалить"></Button>
		<Button android:id="@+id/Cancel"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_weight="1" android:text="Отмена"></Button>
	</LinearLayout>
</LinearLayout>
